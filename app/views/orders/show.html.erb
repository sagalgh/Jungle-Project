<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="order-summary jumbotron">
    <h4> Thank you for your order: <%= @order.email%>!</h4>
  
  

   <h5> Summary: </h5>
  <table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
  <% @order.line_items.each do |item| %>
  <tr>
  <td>
    <%= image_tag item.product.image.tiny %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol item.product.price %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol item.product.price * item.quantity %>
  </td>
</tr> 
<% end %>
<tfoot>
<tr>
  <th colspan="4">
    TOTAL:
  </th>
  <th>
    <%=  humanized_money_with_symbol @order.total_cents / 100.0 %>
  </th>
</tr>
</tfoot>
</tbody>
</table>
  </div>
    <div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
    <div>
</section>